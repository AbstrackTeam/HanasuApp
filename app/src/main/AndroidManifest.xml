<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abstrack.hanasu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_hanasu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hanasu">
        <activity
            android:name=".activity.welcome.WelcomeActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.welcome.SetProfileInfoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.landing.AddFriendActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.auth.VerifyEmailActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.auth.ForgotPasswordActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.auth.VerifyForgottenPasswordActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.welcome.SetUsernameActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activity.landing.LandingActivity"
            android:exported="false" />
        <activity
            android:name=".activity.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoadingActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>